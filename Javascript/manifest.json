{
  "manifest_version": 3,
  "name": "Rinconada Sentiment Analyzer",
  "version": "1.0",
  "description": "Analyze Rinconada text sentiment using Flask API.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:5000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}

{
  "manifest_version": 3,
  "name": "Rinconada Language Sentiment Analyzer",
  "version": "1.0",
  "description": "Analyze Rinconada text sentiment using Flask API.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["http://localhost:5000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "RLSA Settings"
  },
  "web_accessible_resources": [
    {
      "resources": ["cross.png", "arrow.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
